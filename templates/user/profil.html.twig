{% extends 'base.html.twig' %}

{% block body %}

<div class="content">
  <h1>Profil</h1>
  <div class="profil">
    <div class="profil-picture">
      <img src="{{ user.picture }}" alt="">
    </div>
    <div class="profil-content">
      <h2>{{ user.firstname | capitalize }} {{ user.lastname | capitalize }}</h2>
      <p>Ville : {{ user.city }}</p>
      <p>Age : {{ age }} ans</p>
      {% for vma in user.vmas %}
        <p>VMA : {{ vma.value }} le  {{ vma.createdAd | date('F Y')}}</p>
      {% endfor %}
      <div class="action">
        {% if user.vmas is empty %}
          <a class="btn" href="{{ path('vma_new')}}">Ajouter une VMA</a>
        {% else %}
          <a class="btn" href="{{ path('vma_new')}}">Mettre a jour la VMA</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endblock %}





  
